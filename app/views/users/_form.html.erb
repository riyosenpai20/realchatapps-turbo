<%= form_with(model: user, :url => "/users") do |form| %>
  <div class="">
    Your Name :
    <%= form.text_field :name, value: session[:user], 
        class: 'form-control', 
        placeholder: "Name",
        'aria-label': "Name",
        'aria-describedby': ""
        %>
        <p id="error"><%= flash[:error] %></p>
        <small>
          * This will be saved on your session
        </small>
  </div>
  <div class="d-flex justify-content-center mt-3">
    <%= form.submit "Start Chat", class: "btn btn-primary", id: "button-addon2" %>
  </div>
<% end %>
