<div id="" class="mt-3 col-12 d-flex justify-content-center">
    <div class="dropdown me-2">
        <button id="roomlst" class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" onclick="dropdwn()">
        Rooms
        </button>
        <ul id="roolst-ul" class="dropdown-menu">
            <%= turbo_stream_from "rooms"%>
            <div id="rooms" >
                <%= render @rooms %>
            </div>
        </ul>
    </div>
    <%= render 'layouts/new_room_form' %>
</div>

<div id="chatroom_container" class="row ">
    <div id="room_container"
    class="col-12 ">
        <% if @single_room %>
            <div id="single_room">
                <div class="d-flex justify-content-between mt-2">
                <h4 class="text-center"> 
                    <%= @single_room.name %> - <%= session[:user] %>
                    
                </h4>
                <%= button_to "Delete", @room.id, method: :delete, class: 'btn btn-danger btn-sm ms-5' %>
                </div>
                
                <%= turbo_stream_from @single_room %>
                <div id="messages" data-controller="scroll" class="ps-3 pe-2">
                    <% if @messages %>
                    <%= render @messages %>
                    <% end %>
                </div>
                
                <%= render 'layouts/new_message_form' %>
            </div>
        <% end %>
    </div>
</div>